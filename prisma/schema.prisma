generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role{
  USER
  ADMIN
}
 

model User{
id Int @id @default(autoincrement())

  name String
  email String @unique
  password String
  role Role @default(USER)
  phone        String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  blogs Blog[]
  projects Project[]
  resume Resume[]
}


model Blog{
  id Int @id @default(autoincrement())
  title String
  content String
  image     String? 
  views Int @default(0)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  authorId Int
  author User @relation(fields: [authorId], references: [id])

}


model Project{
  id Int @id @default(autoincrement())
  title String
  description String
  features   String[]
  thumbnail   String[]
  clickCount  Int @default(0)
  projectUrl  String? 
  liveUrl     String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  authorId Int
  user User @relation(fields: [authorId], references: [id])

}


model Resume{
  id Int @id @default(autoincrement())
  fullName String
  email String @unique
  phone String
  address String
  education Json
  experience Json
  skills String[]
  certifications String[]
  languages String[]
  projects Json
  summary String
  portfolioUrl String?
  linkedinUrl String?
  githubUrl String?
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  userId Int
  user User @relation(fields: [userId], references: [id])


}

model Analytics{
  id Int @id @default(autoincrement())
  blogViews Int @default(0)
  resumesMade Int @default(0)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}





model VisitorLog {
  id        Int      @id @default(autoincrement())
  ip        String
  userAgent String
  device    String
  os        String   @default("Unknown")   
  browser   String   @default("Unknown")
  page      String
  createdAt DateTime @default(now())
}



